{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flash & Debug",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "flash",
            "executable": "./build/tinyThreads_F4.elf",
            "request": "launch",
            "type": "cortex-debug",
            "armToolchainPath": "${env:ARM_TOOLCHAIN_PATH}",
            "windows": {
                "servertype": "stlink",
                "serverpath": "${env:STM32CUBE_CLT_PATH}",
                "armToolchainPath": "${env:ARM_TOOLCHAIN_PATH}"
            },
            "linux": {
                "servertype": "openocd",
                "armToolchainPath": "/home/eddie/STM/st/stm32cubeclt/GNU-tools-for-STM32/bin"
            },
            "device": "STM32F446RE",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "STM32F446.svd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        },
