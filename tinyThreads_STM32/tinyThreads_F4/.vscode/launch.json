{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flash & Debug",
            "cwd": "${workspaceRoot}",
            "preLaunchThread": "flash",
            "executable": "./build/tinyThreads_F4.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F446RE",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "STM32F446.svd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        },
        {
            "name": "Erase & Flash & Debug",
            "cwd": "${workspaceRoot}",
            "preLaunchThread": "wipe & flash",
            "executable": "./build/tinyThreads_F4.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F446RE",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "STM32F446.svd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        },
        {
            "name": "Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build/tinyThreads_F4.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F446RE",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "STM32F446.svd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        }
    ]
}